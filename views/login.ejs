<%- include('./partials/head') %>
<section class="login-container">
  <div class="login-text">
    <form action="/stakeholder" method="post">
      <div class="login-form">
        <div class="login-form-top">
      <h3>Log in met jouw bedrijf.</h3>
      <div class="container-logo-login">
        <div id="logo">
          <i class="fas fa-building"></i>
        </div>
      </div>
      </div>
      <label for="username">Username</label>
      <input type="text" id="username" name="u" placeholder="Enter your username" required>
      <label for="password">Password</label>
      <input type="password" id="password" name="p" placeholder="Enter your password" required>
      <button type="submit" class="login-btn">Log in</button>
    </div>
    

      <footer>
        <div class="footer-main">
          <ul class="social-icons">
            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
            <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
          </ul>
        </div>
    
        <div class="footer-bottom">
          <p>&copy; 2024 Handprint Footprint. All rights reserved.</p>
        </div>
      </footer>
    </form>
  </div>
  <section class="welcome-container">
    <div class="login-container-text">
      <h1>Welcome to the website of Handprint Footprint</h1>
      <h3>On this page you can see how well your stakeholders are doing using the SDG's.</h3> 
        <h3>Login to see how well your stakeholders are doing.</h3>
      <img src="https://go-positive.co.uk/resources/Pictures/handprint-for%20social%20preview.png" alt="Handprint/Footprint">
    </div>
  
    <div class="container-sdg-login">
      <% data.forEach(item => { %>
        <img src="https://fdnd-agency.directus.app/assets/<%= item.icon %>" class="static-image">
      <% }); %>
    </div>
  </section>
</section>
